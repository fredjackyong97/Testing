<% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
    <%= msg%>
    <% end %>
<% end %>
<%= form_for @article do |d| %>
    <p>
        <%= d.label :title %>
        <%= d.text_field :title %>
    </p>
    <p>
        <%= d.label :description %>
        <%= d.text_area :description %>
    </p>
    <p>
        <%= d.submit %>
    </p>
<% end %>
<%= link_to "Back To Index", articles_path %>